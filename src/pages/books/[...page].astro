---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BookCard from "../../components/BookCard.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import type { Page } from "astro";
import { Image } from "astro:assets";

export async function getStaticPaths({ paginate }) {
  // booksコレクションを取得
  const posts = await getCollection("books");
  // 登録した日付の新しい順にソート
  posts.sort((a, b) => b.data.regDate.valueOf() - a.data.regDate.valueOf());
  // 1ページ10件で分割
  return paginate(posts, { pageSize: 5 });
}

interface Props {
  page: Page<CollectionEntry<"books">>;
}

const { page } = Astro.props;

const R2_DOMAIN = "https://assets.mypage.nasu.uk";
// 画像URLを正規化するロジック
const getImageUrl = (path) => {
  if (!path) return path;
  if (path.startsWith("http")) return path;
  // 先頭に / があるかないか吸収して結合
  return `${R2_DOMAIN}/${path.replace(/^\//, '')}`;
};
---

<BaseLayout title="books" sideBarActiveItemID="books">

  <div class="relative z-0 pl-2">
    <div class="text-3xl w-full font-bold">Books</div>
  </div>

  {/* ========================================== */}
  {/* ミニ本棚エリア */}
  {/* ========================================== */}
  {page.data.length > 0 && (
    /* 外枠 */
    <div class="relative w-full -mt-12 z-20">
      
      {/* 背景レイヤー（見た目の箱） */}
      <div class="absolute bottom-0 left-0 right-0 h-[170px] bg-base-200/50 rounded-xl shadow-inner z-0"></div>

      {/* スクロールレイヤー（機能の箱） */}
      <div id="shelf-scroll-area" class="relative z-10 overflow-x-auto overflow-y-hidden touch-pan-x pt-16 h-[230px] scrollbar-hide">
        
        <div class="flex items-end min-w-full w-fit mx-auto justify-center gap-4 md:gap-6 px-4 pb-2 h-full relative">
          
          {/* 棚板のライン 
              bottom-0: 一番下に配置
              w-full: 親要素（min-w-full w-fit）に合わせて線を引く
          */}
          <div class="absolute bottom-0 left-0 right-0 border-b-8 border-[#8B4513]/40 w-full z-0"></div>

          {page.data.map((book) => {
            const coverSrc = getImageUrl(book.data.heroImage);
            return (
              <a 
                href={`#${book.slug}`} 
                class="flex-shrink-0 relative group transition-transform hover:-translate-y-2 duration-300 ease-out origin-bottom z-10"
              >
                {/* 自作ツールチップ */}
                <div class="absolute bottom-[115%] left-1/2 -translate-x-1/2 w-[110px] md:w-[130px] p-2 bg-neutral text-neutral-content text-[10px] md:text-xs text-center rounded opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none shadow-lg leading-tight break-words z-30">
                  {book.data.title}
                  <div class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-neutral"></div>
                </div>

                {/* 本の画像 */}
                <div class="w-[70px] md:w-[90px] aspect-[2/3] rounded-sm shadow-md overflow-hidden bg-base-100 relative">
                  {coverSrc ? (
                    <Image 
                      src={coverSrc} 
                      width={100} 
                      height={150} 
                      format="webp" 
                      alt={book.data.title}
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center bg-base-300 text-[10px] text-base-content/50 p-1 text-center">
                      No Image
                    </div>
                  )}
                  
                </div>
              </a>
            );
          })}
        </div>
      </div>
      
      {/* 案内テキスト */}
      <div class="relative z-10">
        <p id="scroll-hint" class="text-center text-xs mt-[-2px] pb-2 opacity-50 md:hidden">← スクロールできます →</p>
        <p class="md:block text-center text-xs mt-[-2px] pb-2 opacity-50">クリックで詳細へジャンプ</p>
      </div>
    </div>
  )}
  {/* ========================================== */}

  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-0 mx-5">
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
          </svg>{" "}
          Previous Page
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-0 mx-5">
          Next Page{" "}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>

  {
    page.data.length === 0 ? (
      <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
        <p class="font-bold">本はまだありません</p>
        <p>新しい本の追加をお待ちください</p>
      </div>
    ) : (
      <ul>
        {page.data.map((post) => (
          <div id={post.slug} class="scroll-mt-24 transition-colors duration-500 target:bg-base-200/50 target:p-2 target:rounded-lg">
            <BookCard
              title={post.data.title}
              desc={post.data.description}
              authors={post.data.authors}
              translators={post.data.translators} 
              publisher={post.data.publisher} 
              pubDate={post.data.pubDate}
              url={post.data.url}
              asin={post.data.asin}
              img={post.data.heroImage || "/no_image.webp"}
              status={post.data.status}
              regDate={post.data.regDate}
              beginDate={post.data.beginDate} 
              endDate={post.data.endDate} 
              badge={post.data.badge}
              tags={post.data.tags}
              slug={post.slug}
              custom_tags_url={"/books/tag"}
            />
            <div class="divider my-0" />
          </div>
        ))}
      </ul>
    )
  }

  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-10 mx-5">
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
          </svg>{" "}
          Previous Page
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-10 mx-5">
          Next Page{" "}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  function checkScroll() {
    const scrollArea = document.getElementById('shelf-scroll-area');
    const hint = document.getElementById('scroll-hint');

    if (!scrollArea || !hint) return;

    // scrollWidth（中身の本当の幅） > clientWidth（見えている幅） なら、はみ出している
    const isOverflowing = scrollArea.scrollWidth > scrollArea.clientWidth;

    if (isOverflowing) {
      // はみ出しているなら表示
      hint.classList.remove('opacity-0');
    } else {
      // 収まっているなら隠す
      hint.classList.add('opacity-0');
    }
  }

  // ページ読み込み時と、画面サイズ変更時にチェックを実行
  window.addEventListener('load', checkScroll);
  window.addEventListener('resize', checkScroll);
  // Astroのページ遷移に対応（View Transitionsを使っている場合用）
  document.addEventListener('astro:page-load', checkScroll);
</script>