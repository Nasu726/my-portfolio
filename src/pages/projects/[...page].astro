---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

import type { Page } from "astro";
import type { CollectionEntry } from "astro:content";

// ページネーション用の設定
export async function getStaticPaths({ paginate }) {
  // projectsコレクションをすべて取得して日付順にソート
  const projects = (await getCollection("projects")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  
  // 1ページあたり10件で分割する
  return paginate(projects, { pageSize: 10 });
}

interface Props {
  page: Page<CollectionEntry<"projects">>;
}
// ページ情報の受け取り
const { page } = Astro.props;
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  {/* プロジェクトのリスト表示 */}
  {
    page.data.length === 0 ? (
      <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-h-[50vh] flex items-center justify-center">
        <p class="font-bold">プロジェクトはまだありません。</p>
      </div>
    ) : (
      <ul>
        {page.data.map((project) => (
          <>
            <HorizontalCard
              title={project.data.title}
              img={project.data.heroImage}
              imgDark={project.data.heroImageDark}
              desc={project.data.description}
              badge={project.data.badge}
              url={project.data.url}
            />
            <div class="divider my-0" />
          </>
        ))}
      </ul>
    )
  }

  {/* ページネーションボタン */}
  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-10 mx-5">
          {"<"} Newer Projects
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-10 mx-5">
          Older Projects {">"}
        </a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>