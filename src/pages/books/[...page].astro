---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BookCard from "../../components/BookCard.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import type { Page } from "astro";
import { NullTypes } from "@prisma/client/runtime/client";
import { Image } from "astro:assets";

export async function getStaticPaths({ paginate }) {
  // booksコレクションを取得
  const posts = await getCollection("books");
  // 登録した日付の新しい順にソート
  posts.sort((a, b) => b.data.regDate.valueOf() - a.data.regDate.valueOf());
  // 1ページ10件で分割
  return paginate(posts, { pageSize: 5 });
}

interface Props {
  page: Page<CollectionEntry<"books">>;
}

const { page } = Astro.props;

const R2_DOMAIN = "https://assets.mypage.nasu.uk";
// 画像URLを正規化するロジック
const getImageUrl = (path) => {
  if (!path) return path;
  if (path.startsWith("http")) return path;
  // 先頭に / があるかないか吸収して結合
  return `${R2_DOMAIN}/${path.replace(/^\//, '')}`;
};
---

<BaseLayout title="books" sideBarActiveItemID="books">

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Books</div>
  </div>

  {/* ========================================== */}
  {/* ★ここに追加: ページ上部の「ミニ本棚」エリア */}
  {/* ========================================== */}
  {page.data.length > 0 && (
    <div class="w-full bg-base-200/50 rounded-xl p-6 mb-10 shadow-inner overflow-hidden">
      {/* 棚の板（flex-wrapなし＝1行に収める） */}
      <div class="flex items-end overflow-x-auto justify-center gap-2 md:gap-6 border-b-8 border-[#8B4513]/40 pb-0 px-4 h-[150px] md:h-[180px] scrollbar-hide">
        {page.data.map((book) => {
          const coverSrc = getImageUrl(book.data.heroImage);
          return (
            <a 
              href={`#${book.slug}`} 
              class="flex-shrink-0 tooltip tooltip-bottom relative group transition-transform hover:-translate-y-2 duration-300 ease-out origin-bottom"
              data-tip={book.data.title}
            >
              <div class="w-[5rem] md:w-[5rem] aspect-[2/3] rounded-sm shadow-md overflow-hidden bg-base-100 relative">
                {coverSrc ? (
                  <Image 
                    src={coverSrc} 
                    width={100} 
                    height={150} 
                    format="webp" 
                    alt={book.data.title}
                    class="w-full h-full object-cover"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-base-300 text-[10px] text-base-content/50 p-1 text-center">
                    No Image
                  </div>
                )}
              </div>
            </a>
          );
        })}
        {/* スクロール時の右端の余白調整用ダミー要素 */}
        <div class="w-1 flex-shrink-0 md:hidden"></div>
      </div>
      <p class="text-center text-xs mt-2 opacity-50 md:hidden">← スクロールできます →</p>
      <p class="text-center text-xs mt-2 opacity-50">クリックで詳細へジャンプ</p>
    </div>
  )}
  {/* ========================================== */}

  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-0 mx-5">
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
          </svg>{" "}
          Previous Page
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-0 mx-5">
          Next Page{" "}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>

  {
    page.data.length === 0 ? (
      <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
        <p class="font-bold">本はまだありません</p>
        <p>新しい本の追加をお待ちください</p>
      </div>
    ) : (
      <ul>
        {page.data.map((post) => (
          <div id={post.slug} class="scroll-mt-24 transition-colors duration-500 target:bg-base-200/50 target:p-2 target:rounded-lg">
            <BookCard
              title={post.data.title}
              desc={post.data.description}
              authors={post.data.authors}
              translators={post.data.translators} 
              publisher={post.data.publisher} 
              pubDate={post.data.pubDate}
              url={post.data.url}
              asin={post.data.asin}
              img={post.data.heroImage || "/no_image.webp"}
              status={post.data.status}
              regDate={post.data.regDate}
              beginDate={post.data.beginDate} 
              endDate={post.data.endDate} 
              badge={post.data.badge}
              tags={post.data.tags}
              slug={post.slug}
              custom_tags_url={"/books/tag"}
            />
            <div class="divider my-0" />
          </div>
        ))}
      </ul>
    )
  }

  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-10 mx-5">
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
          </svg>{" "}
          Previous Page
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-10 mx-5">
          Next Page{" "}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>