---
const { title, img, imgDark, desc, url, badge, tags, target = "_blank", format="webp" } = Astro.props;
import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
const badges = Array.isArray(badge) ? badge.flat() : [badge];
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class={`max-w-full md:max-w-[13rem] rounded-lg ${imgDark ? "block dark:hidden" : ""}`}
          />
        )
      }
      {imgDark && (
        <Image
          src={imgDark}
          width={750}
          height={422}
          format={format}
          alt={title}
          class="max-w-full md:max-w-[13rem] rounded-lg hidden dark:block"
        />
      )}
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {
            badges && 
              badges.filter(Boolean).map((b) => (
                <div class="badge badge-secondary mx-1">
                  {b}
                </div>
              ))
          }
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-begin">
          {
            tags &&
              tags.map((tag) => (
                <a href={`${tag_url}/${tag}`} class="badge badge-outline">
                  {tag}
                </a>
              ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
