---
import BaseLayout from "../../../../layouts/BaseLayout.astro";
import HorizontalCard from "../../../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths({ paginate }) {
  // 1. 全プロジェクト取得
  const all_posts = await getCollection("projects");
  
  // 2. すべてのプロジェクトからタグを抽出し、フラットな配列にする
  const all_tags = all_posts.flatMap((post) => {
    return post.data.tags || [];
  });

  // 3. 重複を除去してユニークなタグのリストを作成
  const unique_tags = [...new Set(all_tags)];

  // 4. タグごとにページを生成
  return unique_tags.flatMap((tag) => {
    // そのタグを含むプロジェクトのみ抽出
    const filtered_posts = all_posts.filter((post) => {
      return post.data.tags && post.data.tags?.includes(tag);
    });

    // 日付順にソート
    filtered_posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

    return paginate(filtered_posts, {
      params: { tag },
      pageSize: 10,
    });
  });
}

const { page } = Astro.props;
const params = Astro.params;
---

<BaseLayout title={"Projects - " + params.tag} sideBarActiveItemID="projects">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Works - {params.tag}</div>
    <a href="/projects" class="btn btn-outline btn-sm mt-4">← All Works</a>
  </div>

  {
    page.data.length === 0 ? (
      <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
        <p class="font-bold">このタグのプロジェクトはまだありません</p>
        <p>新しいプロジェクトの発表をお待ちください</p>
      </div>
    ) : (
      <ul>
        {page.data.map((post) => (
          <>
            <HorizontalCard
              title={post.data.title}
              img={post.data.heroImage}
              imgDark={post.data.heroImageDark}
              desc={post.data.description}
              url={post.data.url}
              target="_blank"
              badge={post.data.badge}
              tags={post.data.tags}
              custom_tags_url={"/projects/tag"}
            />
            <div class="divider my-0" />
          </>
        ))}
      </ul>
    )
  }

  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-10 mx-5">
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
          </svg>{" "}
          Recent Works
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-10 mx-5">
          Older Works{" "}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>